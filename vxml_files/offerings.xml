<?xml version="1.0" encoding="UTF-8"?>
<vxml version="2.1" application="http://webhosting.voxeo.net/170418/www/root.vxml">

    <block>
        <prompt bargein="false">
            Welcome to Forêt Marché!
            <break time="500" />
            Bonjour a Forêt Marché!
            <!-- <audio src="http://www.adline.com/mobile?code=12s4" /> -->
        </prompt>
    </block>

    <!-- 
        Possible Products for sale

        Sheabutter
        Honey
        ??? TBA
     -->
    <!-- entering offerings, main menu -->
    <block>

        <menu id="menu_product" scope="dialog">
            <prompt>
                <break time="1000" />
                Please which product you want to sell
            </prompt>
            <prompt>
                <enumerate>
                    <break time="1000" />
                    For
                    <value expr="_prompt" />
                    , Press
                    <value expr="_number" />
                </enumerate>
            </prompt>

            <choice event="bag_product_selected" number="1" message="SheaButter">Shea Butter</choice>
            <choice event="kg_product_selected" number="2" message="Soybeans">Honey</choice>

            <noinput>
                No input, we will repeat the product list
                <reprompt />
            </noinput>

            <nomatch>
                Sorry, no match has been found with that number
                <reprompt />
            </nomatch>
        </menu>
    </block>

</vxml>